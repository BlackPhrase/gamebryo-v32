<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="adapter" type="adapter"/>
  
  <xs:complexType name="adapter">
    <!-- Class
           This attribute contains the adapter class to use for the adapter.
           The class must be derrived from IEditableAdapter.
    -->
    <xs:attribute name="class" type="xs:string"/>
    <!-- Control-Class
           This attribute is the control class to be used with the editable
           adapter.  You can use control base classes too.  That is, using
           System.Windows.Forms.TextBoxBase, will map adapter to anything
           that derrives from TextBoxBase.
    -->
    <xs:attribute name="control-class" type="xs:string"/>
  </xs:complexType>
  
</xs:schema>
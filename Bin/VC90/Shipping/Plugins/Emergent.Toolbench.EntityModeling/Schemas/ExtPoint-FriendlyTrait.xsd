<?xml version="1.0" encoding="utf-8" ?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="unqualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="friendly-trait" type="friendly-trait" />
    <xs:complexType name="friendly-trait">
        <xs:sequence>
            <xs:element name="friendly-description" type="xs:string" />
        </xs:sequence>
        <xs:attribute name="trait-name" type="xs:string" use="required" />
        <xs:attribute name="trait-group" type="xs:string" use="required" />
        <xs:attribute name="friendly-name" type="xs:string" use="required" />
        <xs:attribute name="default-on" type="xs:boolean" default="false" use="optional" />
        <xs:attribute name="visible" type="xs:boolean" default="true" use="optional" />
        <xs:attribute name="priority" type="xs:unsignedInt" default="100" use="optional" />
    </xs:complexType>
</xs:schema>
<?xml version="1.0" encoding="utf-8" ?>
<plugin
  xmlns="http://www.emergent.net/schemas/plugin-base-schema.xsd"
  name="World Builder UI (Render Modes)"
  id="Emergent.Toolbench.WorldBuilder.UI.RenderModes"
  version="1.1.0.0"
  provider="Emergent Game Technologies"
  class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.Plugin">

  <extension point="Emergent.Toolbench.WorldBuilder.UI.Gamebryo.RenderMode">
    <rendermode name="Default"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.DefaultRenderMode" />
    <rendermode name="Wireframe"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.WireframeRenderMode" />
    <rendermode name="Flat Wireframe"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.FlatWireframeRenderMode" />
    <rendermode name="No Shadows"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.NoShadowsRenderMode" />
    <rendermode name="No Textures"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.NoTexturesRenderMode" />
    <rendermode name="Per Vertex Lighting"
                class="Emergent.Toolbench.WorldBuilder.UI.RenderModes.PerVertexLightingRenderMode" />
  </extension>

  <requires>
    <import plugin="Emergent.Toolbench.WorldBuilder.UI.Gamebryo"/>
  </requires>

  <runtime>Emergent.Toolbench.WorldBuilder.UI.RenderModes.dll</runtime>

</plugin>
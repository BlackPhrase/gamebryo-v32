<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="ExtPoint-SceneQuery"
    targetNamespace="http://tempuri.org/ExtPoint-SceneQuery.xsd"
    elementFormDefault="qualified"
    xmlns="http://tempuri.org/ExtPoint-SceneQuery.xsd"
    xmlns:mstns="http://tempuri.org/ExtPoint-SceneQuery.xsd"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
    <xs:element name="SceneQuery" type="SceneQuery"/>

    <xs:complexType name="SceneQuery">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="class" type="xs:string" use="required"/>
                <xs:attribute name="name" type="xs:string" use="required"/>
                <xs:attribute name="category" type="xs:string" use="required"/>
                <xs:attribute name="description" type="xs:string" use="optional" default=""/>
                <xs:attribute name="active" type="xs:boolean" use="optional" default="true"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
</xs:schema>

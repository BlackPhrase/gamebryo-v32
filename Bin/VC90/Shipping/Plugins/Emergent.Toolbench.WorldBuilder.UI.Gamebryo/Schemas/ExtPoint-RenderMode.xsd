<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <xs:element name="rendermode" type="rendermode"/>

  <xs:complexType name="rendermode">
    <!-- name
      The name of the render mode to display to the user.  This name should be unique.
    -->
    <xs:attribute name="name" type="xs:string" use="required"/>
    <!-- class
      The full class name of the class to use when instantiating the render mode.  This class must
      inherit from IRenderMode.
    -->
    <xs:attribute name="class" type="xs:string" use="required"/>
  </xs:complexType>
  
</xs:schema>